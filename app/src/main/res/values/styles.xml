<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontLocalized">
<!--        <item name="android:fontFamily">@font/amaranth_bold</item>-->
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Handwriting">
        <item name="android:fontFamily">@font/shortstack_regular</item>
    </style>

    <style name="FontNumbers">
        <item name="android:fontFamily">@font/ganclm</item>
    </style>

    <style name="Splash">
        <item name="android:fontFamily">@font/helsinki</item>
    </style>

</resources>
