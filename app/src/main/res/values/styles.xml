<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontLocalized">
<!--        <item name="android:fontFamily">@font/amaranth_bold</item>-->
<!--        <item name="android:fontFamily">@font/sourcesanspro_bold</item>-->
        <item name="android:fontFamily">@font/rubik_black</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsFontLocalized">
        <item name="android:fontFamily">@font/rubik_black</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:windowBackground">@drawable/main_background_design</item>-->
    </style>

    <style name="TutorialFontLocalized" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/rubik_black</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Handwriting">
        <item name="android:fontFamily">@font/shortstack_regular</item>
    </style>

    <style name="FontNumbers">
        <item name="android:fontFamily">@font/rubik_black</item>
    </style>

    <style name="Splash">
        <item name="android:fontFamily">@font/helsinki</item>
    </style>


    <style name="line"  parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBtn4</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizental</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>
