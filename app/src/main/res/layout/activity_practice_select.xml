<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="5"
    android:background="@drawable/background_image_with_alpha"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:id="@+id/main_layout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_settings_black_24dp"
            android:id="@+id/settings"
            android:alpha="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            style="@style/FontLocalized"
            android:text="@string/practice_btn_txt"
            android:gravity="center"
            android:textColor="@color/colorBtn1"
            android:layout_marginBottom="30dp"
            android:textSize="60sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjects_display_layout"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btn_continue_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_1_design"
            android:text="@string/continue_btn_txt"
            android:textSize="30sp"
            style="@style/FontLocalized"
            android:textColor="@color/white"
            android:padding="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:id="@+id/empty_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button_1_design"
            android:text="@string/back_btn_txt"
            android:textSize="25sp"
            style="@style/FontLocalized"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_select_subject"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button_1_design"
            android:text="@string/select_subject_btn_txt"
            android:textSize="25sp"
            android:textColor="@color/white"
            style="@style/FontLocalized"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>
    </LinearLayout>
