<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_design">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1 + 1= ?"
        style="@style/FontLocalized"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:id="@+id/question_text"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@id/question_text">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_4_design"
                android:textColor="@color/white"
                android:text="120"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:id="@+id/btn_answer_1"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_4_design"
                android:textColor="@color/white"
                android:text="120"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:id="@+id/btn_answer_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_4_design"
                android:textColor="@color/white"
                android:text="120"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:id="@+id/btn_answer_3"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_4_design"
                android:textColor="@color/white"
                android:text="120"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:id="@+id/btn_answer_4"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>