<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title_layout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_settings_black_24dp"
            android:id="@+id/settings"
            android:alpha="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            style="@style/FontLocalized"
            android:gravity="center"
            android:text="@string/learn_btn_txt"
            android:textColor="@color/colorBtn3"
            android:textSize="60sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            style="@style/FontLocalized"
            android:textColor="@color/colorBtn3"
            android:text="@string/select_subject_btn_txt"/>
    </LinearLayout>

    <!--    The Subjects Fragment Will be here-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjects_display_layout"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/btn_start_learning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:background="@drawable/button_3_design"
            style="@style/FontLocalized"
            android:text="@string/start_learn_btn_txt"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:padding="10dp">
        </Button>

</LinearLayout>
</LinearLayout>