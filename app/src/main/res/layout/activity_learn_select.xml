<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@drawable/background_image_with_alpha"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:id="@+id/title_layout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_settings_black_24dp"
            android:id="@+id/settings"
            android:alpha="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="25dp"
            style="@style/FontLocalized"
            android:gravity="center"
            android:text="@string/learn_btn_txt"
            android:textColor="@color/colorBtn3"
            android:textSize="60sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:id="@+id/select_subject_layout"
        android:layout_below="@+id/title_layout">
        <Button
            android:id="@+id/btn_select_subject"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_3_design"
            style="@style/FontLocalized"
            android:text="@string/select_subject_btn_txt"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="bottom|left"
        android:layout_below="@+id/select_subject_layout">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="@drawable/button_3_design"
            android:text="@string/back_btn_txt"
            android:textSize="22sp"
            style="@style/FontLocalized"
            android:textColor="@color/white"
            android:padding="5dp"/>
    </LinearLayout>
</LinearLayout>