<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_image_with_alpha">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title_layout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_settings_black_24dp"
            android:id="@+id/settings"
            android:alpha="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            style="@style/FontLocalized"
            android:gravity="center"
            android:text="@string/learn_btn_txt"
            android:textColor="@color/colorBtn3"
            android:textSize="60sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        style="@style/FontLocalized"
        android:textColor="@color/green_title"
        android:text="@string/title_learn_sub_categories_option2"
        android:layout_margin="20dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="20dp"
        android:id="@+id/empty_layout_learn">
    </LinearLayout>

    <!--    The Subjects Fragment Will be here-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjects_display_layout"
        android:gravity="center">
    </RelativeLayout>


