<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title_layout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_settings_black_24dp"
            android:id="@+id/settings"
            android:alpha="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            style="@style/FontLocalized"
            android:textColor="@color/colorBtn3"
            android:text="@string/select_subject_btn_txt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:id="@+id/category_cards_layout_1">

        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:id="@+id/card_addition_category"
            app:cardBackgroundColor="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addition_category_txt"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:id="@+id/card_subtraction_category"
            app:cardBackgroundColor="@color/green_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtraction_category_txt"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:id="@+id/card_multiplication_category"
            app:cardBackgroundColor="@color/green_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multiplication_category_txt"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/category_cards_layout_2">

        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:id="@+id/card_division_category"
            app:cardBackgroundColor="@color/green_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/division_category_txt"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:id="@+id/card_fractions_category"
            app:cardBackgroundColor="@color/green_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fractions_category_txt"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:id="@+id/card_percentages_category"
            app:cardBackgroundColor="@color/green_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percentages_category_txt"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:id="@+id/category_cards_layout_3">

        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:id="@+id/card_decimal_numbers_category"
            app:cardBackgroundColor="@color/green_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decimal_numbers_category_txt"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/FontLocalized"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>